{% extends 'base.html.twig' %}

{% block title %}Connexion Au Service WebForceLife{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-5 mt-3">
            <img src="{{ asset("allImages/wf3.jpg") }}" alt="" width="300" height="auto">
        </div>
        <div class="col-7 mt-5">
            <div class="bg-ligth ">
                <h1>Bienvenue sur WebForceLife</h1>
                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide</div>
                {% endif %}
                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..." required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" placeholder="Mot de pass..." class="form-control" required>
                    </div>
                    <a href="#">Mot de passe oubli√© ?</a>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Connexion !</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
